<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="manager">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.P</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://debian7.biberius.net:5432/hibernate_orm_test"/>
            <property name="jakarta.persistence.jdbc.user" value="hibernate_orm_test"/>
            <property name="jakarta.persistence.jdbc.password" value="hibernate_orm_test"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- OR -->
            <!--<property name="jakarta.persistence.schema-generation.database.action" value="create"/>-->
        </properties>
    </persistence-unit>
</persistence>
